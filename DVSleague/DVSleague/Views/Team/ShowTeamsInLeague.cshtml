
@{      
    ViewBag.Title = "ShowTeamsInLeague";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<DVSleague.Models.Team>

<h1> All teams in league</h1>
@{
    foreach (var team in Model)
    {
        <div class="col-lg-3 border">
            <h3>@team.Name</h3>
            <div>
                <span>Country: </span>
                <span class="fontBold">@team.Country</span>
            </div>
            <div>
                <span>City: </span>
                <span class="fontBold">@team.City</span>
            </div>
            <div>
                <a class="btn btn-success floatRight margin" href="@Url.RouteUrl("show_players", new { teamId = team.Id})">Show players</a>
            </div>
        </div>
    }
}
