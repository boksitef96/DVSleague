
@{
    ViewBag.Title = "Player";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model DVSleague.Models.Player

<div class="playerBorder">
    <div class="playerBox">
        <h2>Player :</h2>

        <div class="rowBorder">
            <span>First Name:</span>
            <span class="fontBold">@Model.FirstName</span>
        </div>
        <div class="rowBorder">
            <span>Last Name:</span>
            <span class="fontBold">@Model.LastName</span>
        </div>

        <div class="rowBorder">
            <span>Date Of Birth:</span>
            <span class="fontBold">@Model.DateOfBirth.ToString("dd/MM/yyyy")</span>
        </div>
        <div class="rowBorder">
            <span>Nationality:</span>
            <span class="fontBold">@Model.Nationality</span>
        </div>
        <div class="rowBorder">
            <span>Height:</span>
            <span class="fontBold">@Model.Height</span>
        </div>
        <div class="rowBorder">
            <span>Weight:</span>
            <span class="fontBold">@Model.Weight</span>
        </div>
        <div class="rowBorder">
            <span>Goals:</span>
            <span class="fontBold">@Model.Goals</span>
            <i class="fa fa-futbol-o"></i>
        </div>
        <div class="rowBorder">
            <span>Assists:</span>
            <span class="fontBold">@Model.Assists</span>
        </div>

    </div>
</div>